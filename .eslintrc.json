{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "compat"
  ],
  "rules": {
    "function-paren-newline": 0,
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "compat/compat": 2,
    "react/prop-types": 0,
    "flowtype/require-valid-file-annotation": 2,
    "react/jsx-filename-extension": 0
  },
  "env": {
    "jest": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
